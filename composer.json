{
  "name": "digital-marketing-framework/typo3-distributor-mail",
  "type": "typo3-cms-extension",
  "description": "Mail delivery system based on Digital Marketing Framework",
  "license": "GPL-2.0+",
  "keywords": [
    "TYPO3",
    "extension",
    "form",
    "data",
    "submission",
    "relay",
    "email",
    "mail"
  ],
  "homepage": "https://www.mediatis.de",
  "authors": [
    {
      "name": "Michael VÃ¶hringer",
      "role": "Developer"
    },
    {
      "name": "Meelis Karulin",
      "role": "Developer"
    },
    {
      "name": "Damian Ickler",
      "role": "Developer"
    },
    {
      "name": "Stephan Ude",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:digital-marketing-framework/typo3-distributor-core.git",
      "only": [
        "digital-marketing-framework/typo3-distributor-core"
      ]
    },
    {
      "type": "vcs",
      "url": "git@github.com:digital-marketing-framework/typo3-core.git",
      "only": [
        "digital-marketing-framework/typo3-core"
      ]
    },
    {
      "type": "vcs",
      "url": "git@github.com:digital-marketing-framework/distributor-mail.git",
      "only": [
        "digital-marketing-framework/distributor-mail"
      ]
    }
  ],
  "require": {
    "php": "^8.1",
    "typo3/cms-core": "^11.5 || ^12.4",
    "digital-marketing-framework/typo3-distributor-core": "dev-main",
    "digital-marketing-framework/distributor-mail": "dev-main"
  },
  "require-dev": {
    "nimut/testing-framework": "^6.0",
    "typo3/coding-standards": "^0.5.2"
  },
  "autoload": {
    "psr-4": {
      "DigitalMarketingFramework\\Typo3\\Distributor\\Mail\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DigitalMarketingFramework\\Typo3\\Distributor\\Csv\\Tests\\": "Tests"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "allow-plugins": {
      "typo3/cms-composer-installers": true,
      "typo3/class-alias-loader": true
    }
  },
  "scripts": {
    "link-extension": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/digitalmarketingframework_distributor_mail ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/digitalmarketingframework_distributor_mail"
    ]
  },
  "extra": {
    "typo3/cms": {
      "web-dir": ".Build/Web",
      "extension-key": "digitalmarketingframework_distributor_mail"
    }
  }
}
