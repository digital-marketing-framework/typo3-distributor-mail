<h3>Data Dispatcher Preview ({{ keyword }})</h3>

<div>
    <h4>Email config</h4>
    <div>
        <table class="table table-striped table-hover">
            <tbody>
            <tr>
                <td>From</td>
                <td>{{ from|join(', ') }}</td>
            </tr>
            <tr>
                <td>To</td>
                <td>{{ to|join(', ') }}</td>
            </tr>
            <tr>
                <td>Reply to</td>
                <td>{{ replyTo|join(', ') }}</td>
            </tr>
            <tr>
                <td>Subject</td>
                <td>{{ subject }}</td>
            </tr>
            <tr>
                <td>Attach files</td>
                <td>{% if attachFiles %}yes{% else %}no{% endif %}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

<div>
    <h4>Plain text body</h4>
    <div class="container">
        <pre>{{ plainText|raw }}</pre>
    </div>
</div>

<div>
    <h4>HTML body</h4>
    <div class="container">
        {{ htmlText|raw }}
    </div>
</div>

<div>
    <h4>Data</h4>
    <div>
        {% include 'preview/data-table.html.twig' %}
    </div>
</div>
